<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
  </head>
  <body>
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
            {% include 'fuzzy-message' %}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}
  </body>
</html>
<style>
.order-summary__sections {
  height: unset !important;
}
.fuzzy-message-img{
  max-width: 30px;
  margin-right: 10px;
}
.fuzzy-message-row{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  max-width: 100%;
  flex-wrap: wrap;
  margin: 30px auto;
}
.fuzzy-message-col{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20px;
  max-width: 200px;
  width: 50%;
  @media screen and (max-width: 500px){
    width: 100%;
    max-width: 90%;
    justify-content: center;
    margin: .5em 0;
  }
}
.fuzzy-message-text{
  text-transform: capitalize;
}
.field__input:focus, .field__input-wrapper--flag-focus .field__input {
  border-color: #ed7724;
  box-shadow: 0 0 0 1px #ed7724;
}
.input-checkbox:checked, .input-radio:checked{
  box-shadow: 0 0 0 10px #ed7724 inset;
}
.breadcrumb{
  justify-content: center;
  max-width: 400px;
  margin: 0 auto;
}
.breadcrumb__item{
  flex: 1;
  justify-content: center;
  padding-top: 1em;
  position: relative;
}

.breadcrumb__item > svg {
  display: none !important;
}
.breadcrumb__item--completed{
  border-top: 2px solid #026172;
}
.breadcrumb__item--completed:before{
  content: "";
  position: absolute;
  top: -1px;
  right: calc(50% - 16px);
  transform: translate(-50%,-50%);
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: #026172;
  border: 2px solid #026172;
}
.breadcrumb__item--current{
  border-top: 2px solid #026172;
}
.breadcrumb__item--current:before{
  content: "";
  position: absolute;
  top: -1px;
  right: calc(50% - 16px);
  transform: translate(-50%,-50%);
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: white;
  border: 2px solid #026172;
}
.breadcrumb__item--blank{
  border-top: 2px solid lightgrey;
}
.breadcrumb__item--blank:before{
  content: "";
  position: absolute;
  top: -1px;
  right: calc(50% - 16px);
  transform: translate(-50%,-50%);
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: white;
  border: 2px solid lightgrey;
}
</style>
<script>
  $('.breadcrumb').prepend('<div class="progress-bar"></div>')
</script>
