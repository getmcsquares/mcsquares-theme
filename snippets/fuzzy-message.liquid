{% for item in checkout.line_items %}
{% assign title = item.title | downcase %}
{% if title contains 'stickie' or title contains 'sticky' %}
{% assign is_sticky = true %}
{% endif %}
{% endfor %}
<div class="fuzzy-message-row">
  <div class="fuzzy-message-col"><img class="fuzzy-message-img" src="{{ 'icon-shipping.png' | asset_url }}"/><p class="fuzzy-message-text">Free Returns</p></div>
  <div class="fuzzy-message-col"><img class="fuzzy-message-img" src="{{ 'icon-moneyback.png' | asset_url }}"/><p class="fuzzy-message-text">100% Money-back Guarantee</p></div>
  <div class="fuzzy-message-col"><img class="fuzzy-message-img" src="{{ 'icon-noghost.png' | asset_url }}"/><p class="fuzzy-message-text">{% if is_sticky %}180 day{% else %}2 Year{% endif %} No Ghosting Guarantee</p></div>
  <div class="fuzzy-message-col"><img class="fuzzy-message-img" src="{{ 'plant.png' | asset_url }}"/><p class="fuzzy-message-text">One Tree Planted for Every Product</p></div>
</div>