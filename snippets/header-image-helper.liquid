            //$(".background-target-" + index).attr("src", "{{section.blocks[" + index0 + "].settings.image_mobile | img_url: '800x800'}}");
            if ( index > 0 ){
                $(".background-target-" + index).css("background-image", "url(" + mobileimage + ")");
            } else {
                $(".background-target-" + index).css("background-image", "url(" + mobileimage + ")");
            }
        } else if (windowsize >= 750){
