{% if block.settings.image_mobile != blank %}
<script type="text/javascript">
    var applyImage = function () {
        windowsize = $(window).width();
        if (windowsize < 750) {
            var image = "{{ block.settings.image_mobile | img_url: '800x800' }}"
            console.log( "image:", image )
            $(".background-target").attr("src", "{{block.settings.image_mobile | img_url: '800x800'}}");
            $(".background-target").css("background-image", "url('" + image + "')'");
        } else if (windowsize >= 750){
            $(".background-target").attr("src", "{{block.settings.image | img_url: '1800x1800' }}");
            $(".background-target").css("background-image", "url('{{block.settings.image| img_url: '1800x1800'}}')'");
        }else {
            $(".background-target").attr("src", "{{block.settings.image | img_url: '1800x1800'}}");
            $(".background-target").css("background-image", "url('{{block.settings.image| img_url: '1800x1800'}}')'");
        }
        console.log(
            "image loaded from helper"
        )
    };
    var applyTitleImage = function () {
        windowsize = $(window).width();
        if (windowsize < 992) {
            $(".titleimg").attr("src", "{{block.settings.titleimg_mobile | img_url: '500x500'}}");
        } else if (windowsize >= 992){
            $(".titleimg").attr("src", "{{block.settings.titleimg | img_url: '1800x1800' }}");
        }else {
            $(".titleimg").attr("src", "{{block.settings.titleimg | img_url: '1800x1800'}}");
        }
        console.log(
            "title image loaded from helper"
        )
    }
    $(window).resize(function() {
        applyImage(),
        applyTitleImage()
    });
    $(document).ready(function() {
        applyImage(),
        applyTitleImage()
    });
</script>
{% endif %}
