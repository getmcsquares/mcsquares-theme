            }
            } else {
            var image = "{{ section.blocks[" + index0 + "].settings.background_image | img_url: '1800x1800' }}"
            var currentBG = $(".background-target-" + index).css("background-image");
            if ( index ){
                if( currentBG != image ){
                    $(".background-target-" + index).css("background-image", "url(" + image + ")");
                }
            } else {
                if( currentBG != image ){
                    $(".background-target-" + index).css("background-image", "url(" + image{{forloop.index}} + ")");
                }
            }
        }
    };
    var applyTitleImage = function () {
        windowsize = $(window).width();
        if (windowsize < 992) {
            $(".titleimg").attr("src", "{{section.blocks[" + index0 + "].settings.titleimg_mobile | img_url: '500x500'}}");
        } else if (windowsize >= 992){
            $(".titleimg").attr("src", "{{section.blocks[" + index0 + "].settings.titleimg | img_url: '1800x1800' }}");
        }else {
            $(".titleimg").attr("src", "{{section.blocks[" + index0 + "].settings.titleimg | img_url: '1800x1800'}}");
        }
    }
    $(window).resize(function() {
        applyImage(),
        applyTitleImage()
    });
    $(document).ready(function() {
        for (var i = 1; i <= {{ section.blocks.size }}; i++ ){
            applyImage(i)
        }
        applyTitleImage()
    });
</script>
