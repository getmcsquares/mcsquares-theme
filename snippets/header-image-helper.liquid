    $(document).ready(function() {
        applyImage('{{block.id}}', "{{ block.settings.image_mobile | img_url: '800x800' }}", "{{ block.settings.background_image | img_url: '1800x1800' }}" )
    });
    $(window).resize(function() {
        applyImage('{{block.id}}', "{{ block.settings.image_mobile | img_url: '800x800' }}", "{{ block.settings.background_image | img_url: '1800x1800' }}" )
    });
</script>
