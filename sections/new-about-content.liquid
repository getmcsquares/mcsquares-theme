<div class="page-width">
  <div class="section-block section-block--padding container">
<div class="section-inner about-content container__row">
  <div class="text-center limitcopywidth">
  <h1 class="section-header">{{ section.settings.section_title }}</h1>
  <p class="subtitle">{{ section.settings.subtitle }}</p>
  </div>

  {% capture cycle_var %}{% cycle 'odd', 'even' %}{% endcapture %}
  {% capture image_layout %}

  <div class="container__col-sm-5"
  style='padding: .5em;'>
  <img class="about-image text-orange" src="{{ block.settings.image | img_url: '800x' }}"/>
  </div>
  {% endcapture %}
    <div class="flex flex--grid flex--no-gutter container__col-sm-7" style='padding: 3em 0;'>
    {% if cycle_var == 'odd' %}{{ image_layout }}{% endif %}
    <div class="text-left flex__item">
      <h2 class="about-subtitle">{{ block.settings.heading}}</h2>
      <p>{{ block.settings.text_content }}</p>
      </div>
      {% if cycle_var == 'even' %}{{ image_layout }}{% endif %}
    </div>
  {% endfor %}
</div>
</div>
</div>
{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}

{% schema %}
  {
    "name": {
      "en": "About main Content"
    },
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": {
          "en": "Section Heading"
        },
        "default": {
          "en": "Default title content"
        }
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": {
          "en": "Section subeading"
        },
        "default": {
          "en": "Default subtitle"
        }
      }
    ],
    "blocks": [
      {
        "type": "quote",
        "name": "About block",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "section heading",
            "default": {
              "en": "Lorem Block Header"
            }
          },
          {
            "type": "text",
            "id": "text_content",
            "label": "Text Content",
            "default": "lorem block content"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}
