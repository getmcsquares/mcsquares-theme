{% comment %} {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%} {% endcomment %}
{% for image in product.images %}
{% if image.alt contains 'logo' %}
  {%- assign featured_image = image | default: product.featured_image -%}
{% endif %}
{% endfor %}
{%- assign bg_color = section.settings.svg_color -%}
<div class="product-info-inner" style="background-color: {{ section.settings.bg_color }}">
{% include 'svg-curve-flat' %}
<div class="container">
<div class="product-info-images">

</div>

<div class="product-info-content row">
  <div class="product-info-logo col-sm-5">
    <img src="{{ featured_image | img_url: '1024x1024' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg-{{ section.id }}">
  </div>
  <div class="product-info-text col-sm-7">

  </div>
</div>
</div>
</div>
{% schema %}
{
  "name": "Static Product Info",
  "class": "product--section-info",
  "settings": [
    {
      "type": "color",
      "id": "svg_color",
      "label": "Top Background"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    }
  ]
}

{% endschema %}