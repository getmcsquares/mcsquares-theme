{%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}
{%- assign bg_color = section.settings.svg_color -%}
<div class="product-info-inner" style="background-color: {{ section.settings.bg_color }}">
{% include 'svg-curve-flat' %}
<div class="container">
<div class="product-info-images">

</div>

<div class="product-info-content row">
  <div class="product-info-logo col-sm-5">
    <a href="{{ featured_image | img_url: '1024x1024' }}">
      <img src="{{ featured_image | img_url: product_image_size }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg-{{ section.id }}">
    </a>
  </div>
  <div class="product-info-text col-sm-7">

  </div>
</div>
</div>
</div>
{% schema %}
{
  "name": "Static Product Info",
  "class": "product--section-info",
  "settings": [
    {
      "type": "color",
      "id": "svg_color",
      "label": "Top Background"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    }
  ]
}

{% endschema %}