
{% assign bg_color = section.settings.bg_color %}
<div>
<section class="promo-mosaic--container d-flex hover-feature-section sidy-by-side">
  <div class="home-section--content hover-feature-content d-flex flex-column half">
  <div class="hover-feature-image-wrap half">
    <img src="{{ section.settings.bg_image | img_url: '800x800' }}">
  </div>
  {% if section.settings.link %}
  <a href="{{section.settings.link}}">
  {% endif %}
      <div class="hover-feature-text-wrap" style="">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.copy }}</p>
      </div>
  {% if section.settings.link %}
  </a>
  {% endif %}

  </div>

<div class="home-section--content hover-feature-content d-flex flex-column half">
  <div class="hover-feature-image-wrap half">
    <img src="{{ section.settings.bg_image-2 | img_url: '800x800' }}">
  </div>
{% if section.settings.link-2 %}
  <a href="{{section.settings.link-2}}">
  {% endif %}
      <div class="hover-feature-text-wrap" style="">
      <h2>{{ section.settings.title-2 }}</h2>
      <p>{{ section.settings.copy-2 }}</p>
      </div>
  {% if section.settings.link-2 %}
  </a>
  {% endif %}
  </div>
</section>
</div>
<style type="text/css">
.hover-feature-content:hover > .hover-feature-text-wrap, .hover-feature-content:hover > a > .hover-feature-text-wrap{
  background-color: {{ bg_color }};
  color: #fff  !important;
}
.hover-feature-content:hover > .hover-feature-text-wrap > a , .hover-feature-content:hover > .hover-feature-text-wrap > p > a{
  color: #fff  !important;
}
</style>

{% schema %}
{
  "name": "Hover Feature 2x",
  "class": "hover-feature-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Main text"
    },
    {
      "type": "richtext",
      "id": "copy",
      "label": "Main Copy"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link 1 (optional)"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
    "type": "image_picker",
    "id": "bg_image",
    "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title-2",
      "label": "Heading 2",
      "default": "Main text 2"
    },
    {
      "type": "richtext",
      "id": "copy-2",
      "label": "Main Copy 2"
    },
    {
    "type": "image_picker",
    "id": "bg_image-2",
    "label": "Background Image 2"
    },
    {
      "type": "url",
      "id": "link-2",
      "label": "Link 2 (optional)"
    }
  ],
  "presets": [
    {
      "name": "Hover Feature 2x",
      "category": "Image"
    }
  ]
}

{% endschema %}
