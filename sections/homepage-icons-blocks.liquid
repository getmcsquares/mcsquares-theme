<div style="background-color: {{ section.settings.section_bg }}" class="section-pad section-inner-small homepage-icons-section">
{% if section.settings.title != blank %}
      <div class="section-block__header text-center">
        <h4 class="h1--mini section-block__title">{{ section.settings.title | escape }}</h4>
      </div>
    {% endif %}
  <div style="clear: both;" class="row contained">
    <div class="col-12 offset-md-1 col-md-10 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
      <div class="row" >
        {% for block in section.blocks %}
        <div class="homepage-icon-wrap col-6 offset-sm-1 col-sm-2" style="">
          {% if block.settings.link != blank %}
            <a href="{{block.settings.link}}">
          {% endif %}
              {% if block.settings.interval_img %}<img class="interval-image-small" src="{{ block.settings.interval_img | img_url: '300x300' }}">{% endif %}
              {% if block.settings.text %}<h5 style="color: {{section.settings.section_font}}">{{ block.settings.text }}</h5>{% endif %}
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
    {% if section.settings.cta_link %}
    <div class="col-12 d-flex align-items-center justify-content-center text-center" style="padding-top: 1.5em;">
      <a class="btn" href="{{ section.settings.cta_link }}">
        <span>{{ section.settings.cta_text }} </span>
      </a>
    </div>
    {% endif %}
  </div>
</div>
{% schema %}
{
    "name": {
        "en": "Homepage Icon Blocks"
    },
    "class": "home-icon-blocks",
    "max_blocks": 10,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "title",
        "default": "Featured Icons"
      },
      {
      "type": "color",
      "id": "section_bg",
      "label": "Section Background"
      },
      {
      "type": "color",
      "id": "section_font",
      "label": "Section Font Color"
      },
      {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Send Invite"
      },
      {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
      }
    ],
    "blocks": [
        {
        "type": "logo_image",
        "settings": [
          {
          "type": "image_picker",
          "id": "interval_img",
          "label": "Icon"
          },
          {
          "type": "text",
          "id": "text",
          "label": "Text"
          },
          {
          "type": "url",
          "id": "link",
          "label": "Icon Link"
          }
          ]
        }
      ],
      "presets": [
      {
      "name": "Homepage Icon blocks",
      "category": "Homepage",
      "blocks": [
        {
          "type": "logo_image"
        }
      ]
    }
  ]
}
{% endschema %}
