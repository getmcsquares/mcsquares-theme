<script
  type="application/json"
  data-section-type="static-slideshow"
  data-section-id="{{ section.id }}"
  data-section-data
>
  {
    "enable_autoplay": {{ section.settings.enable_autoplay | json }},
    "autoplay_duration": {{ section.settings.autoplay_duration | json }}
  }
</script>

{% if section.settings.show_slideshow %}
  <section
    class="
      slideshow
      slideshow-dots-{{ section.settings.slideshow_height }}
    "
    aria-label="Slide show"
  >
    {% for block in section.blocks %}
      {% capture placeholder_slide_image %}
        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
        {% assign placeholder_style = 'lifestyle-' | append: current %}
        {%-
          include 'placeholder_svg_uri'
          placeholder: placeholder_style
        -%}
      {% endcapture %}

      <div
        class="
          slideshow-slide
          slideshow-height-{{ section.settings.slideshow_height }}
        "
        tabindex="0"
        aria-label="Slide {{ forloop.index }} of {{ section.blocks.size }}"
        {{ block.shopify_attributes }}
      >
        {% if block.settings.link != blank %}
          <a
            class="
              slideshow-link
              slideshow-background-link
              slideshow-height-{{ section.settings.slideshow_height }}
            "
            href="{{ block.settings.link }}"
            tabindex="-1"
          ></a>
        {% endif %}

        {% assign slideshow_crop = 'center' %}

        {% if section.settings.slideshow_height == 'original' %}
          {% assign slideshow_crop = false %}
        {% endif %}

        <div
          class="
            background-target
            background-target-{{ forloop.index }}
            slideshow-background
            slideshow-background--{{ block.id }}
            {% if section.settings.sticky %}slideshow-background-sticky{% endif %}
            slideshow-height-{{ section.settings.slideshow_height }}
            {% if block.settings.background_image == blank %}
              placeholder--image
            {% endif %}
          "
          {% if block.settings.background_image %}
            {% comment %} {%
              include 'rimg',
              img: block.settings.background_image,
              size: '2000x2000',
              crop: slideshow_crop,
              lazy: true,
              background: true,
              placeholder: '500x500',
            %} {% endcomment %}
            style="background-image: url('{{ block.settings.background_image | img_url: '1000x1000' }}')"
          {% else %}
            style="background-image: url('{{ placeholder_slide_image | strip }}')"
          {% endif %}
          data-themecolor="{{ settings.color_text }}"
          data-slidecolor="{{ block.settings.color }}"
        >
          {% if block.settings.background_image %}
            {% comment %} {%
              include 'rimg',
              img: block.settings.background_image,
              class: 'slideshow-image',
              size: '1000x1000',
              crop: slideshow_crop,
              lazy: true,
              canvas: true,
            %} {% endcomment %}
            <img
              class="slideshow-image"
              src="{{ block.settings.background_image | img_url: '1500x1500' }}"
              alt=""
            >
          {% else %}
            <img
              class="slideshow-image"
              src="{{ placeholder_slide_image | strip }}"
              alt=""
            >
          {% endif %}

          {% if block.settings.show_overlay %}
            <div
              class="
                slideshow-slide-overlay
                slideshow-slide-overlay--{{ block.id }}
              "
            ></div>
          {% endif %}
        </div>

        {% if block.settings.title != blank
          or block.settings.text != blank
          or block.settings.button_one_label != blank
          or block.settings.button_two_label != blank
        %}
          <div
            class="
              slideshow-slide-content
              slideshow-slide-content--{{ block.id }}
              text-align-{{ block.settings.text_alignment }}
              content-{{ block.settings.text_alignment }}
            "
          >
          <div class="slideshow-slide-background" style="background-color:{{ section.settings.bg_color }}; opacity: {{ section.settings.bg_opacity | times: 0.01 }}"></div>
                <h1 class="hero__title {% if block.settings.link != blank %} hero__title--has-link{% endif %}">
                  {{ block.settings.title | escape }}
                  {% if block.settings.link != blank %}
                  {% endif %}
                </h1>
            <div class="slideshow-subcontent">
            {% if block.settings.text != blank %}
              <p class="slideshow-slide-text">
                {{ block.settings.text | escape }}
              </p>
            {% endif %}
            {% if block.settings.button_one_label != blank %}
              <a
                {% if block.settings.button_one_link != blank %}
                  href="{{ block.settings.button_one_link }}"
                {% endif %}
                class="
                  slideshow-button
                  button-{{ block.settings.button_one_style }}
                "
              >
                {{ block.settings.button_one_label | escape }}
              </a>
            {% endif %}

            </div>
            {% if block.settings.button_two_label != blank %}
              <a
                {% if block.settings.button_two_link != blank %}
                  href="{{ block.settings.button_two_link }}"
                {% endif %}
                class="
                  slideshow-button
                  button-{{ block.settings.button_two_style }}
                "
              >
                {{ block.settings.button_two_label | escape }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
      {% include 'header-image-helper' index=forloop.index %}
    {% endfor %}

    {%
      include 'slideshow-overlay',
      blocks: section.blocks
    %}
  </section>
{% endif %}
{% schema %}
{
  "name": "Slideshow Offers",
  "class": "slideshow--section",
  "settings": [
    {
      "id": "show_slideshow",
      "type": "checkbox",
      "label": "Enable slideshow",
      "default": true
    },
    {
      "id": "enable_autoplay",
      "type": "checkbox",
      "label": "Autoplay slideshow",
      "default": true
    },
    {
      "id": "sticky",
      "type": "checkbox",
      "label": "Keep text content in slideshow on mobile?",
      "default": false
    },
    {
      "id": "bg_color",
      "type": "color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "id": "bg_opacity",
      "type": "range",
      "label": "background opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 4
    },
    {
      "id": "autoplay_duration",
      "type": "range",
      "label": "Autoplay slide duration",
      "min": 5,
      "max": 12,
      "step": 1,
      "unit": "sec",
      "default": 8
    },
    {
      "id": "slideshow_height",
      "type": "select",
      "label": "Slideshow height",
      "options": [
        {
          "value": "small",
          "label": "Small - 340"
        },
        {
          "value": "medium",
          "label": "Medium - 400"
        },
        {
          "value": "large",
          "label": "Large - 560"
        },
        {
          "value": "dynamic",
          "label": "Dynamic"
        }
      ],
      "default": "dynamic"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "id": "background_image",
          "type": "image_picker",
          "label": "Background image",
          "info": "1800x1000 recommended"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image (Mobile View)"
        },
        {
          "id": "title",
          "type": "text",
          "label": "Heading",
          "default": "Slideshow"
        },
        {
          "id": "text",
          "type": "text",
          "label": "Subheading",
          "default": "Introduce customers to your shop with lifestyle and product imagery"
        },
        {
          "id": "color",
          "type": "color",
          "label": "Text color",
          "default": "#FFFFFF"
        },
        {
          "id": "text_alignment",
          "type": "select",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "header",
          "content": "Buttons"
        },
        {
          "id": "button_one_label",
          "type": "text",
          "label": "Button 1 label",
          "default": "Button"
        },
        {
          "id": "button_one_link",
          "type": "url",
          "label": "Button 1 link"
        },
        {
          "id": "button_one_style",
          "type": "select",
          "label": "Button 1 style",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            }
          ],
          "default": "primary"
        },
        {
          "id": "button_two_label",
          "type": "text",
          "label": "Button 2 label"
        },
        {
          "id": "button_two_link",
          "type": "url",
          "label": "Button 2 link"
        },
        {
          "id": "button_two_style",
          "type": "select",
          "label": "Button 2 style",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            }
          ],
          "default": "primary"
        },
        {
          "type": "header",
          "content": "Overlay"
        },
        {
          "id": "show_overlay",
          "type": "checkbox",
          "label": "Show overlay",
          "default": true
        },
        {
          "id": "overlay_color",
          "type": "color",
          "label": "Color",
          "default": "#000000"
        },
        {
          "id": "overlay_opacity",
          "type": "range",
          "label": "Opacity",
          "min": 1,
          "max": 100,
          "step": 1,
          "unit": "%",
          "default": 50
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "slide"
      },
      {
        "type": "slide"
      }
    ]
  }
}

{% endschema %}
