<section class="blog--container container">
  <ul class="blog-nav">
    <li><h4><a onclick="blogSwitch('all')">All</a></h4></li>
    <li><h4><a onclick="blogSwitch('education')">Education</a></h4></li>
    <li><h4><a onclick="blogSwitch('work')">Work</a></h4></li>
  </ul>
<div class="row article-row articles-all">
  <ul class="blog--inner">
  {% paginate blog.articles by paginate_by %}
  {% for article in blog.articles reversed %}
      {%
        include 'article-excerpt',
        article: article
        %}
  {% endfor %}
  {% include 'pagination' %}
  {% endpaginate %}
</ul>
</div>

<div class="row article-row articles-education" style="display:none">
  <ul class="blog--inner">
  {% for article in blog.articles reversed %}
    {% if article.tags contains 'Education' %}
      {%
        include 'article-excerpt',
        article: article
        %}
    {% endif%}
  {% endfor %}
</ul>
</div>
</section>
<script>
var blogSwitch = function ( target ) {
  $('.article-row').hide()
  $('.articles-' + target).fadeIn();
}
</script>




{% schema %}
{
  "name": "Blog pages",
  "class": "blog--section section-pad has-graphic",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_rss_link",
      "label": "Show RSS link",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show date published",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show post author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show post excerpt",
      "default": true
    },
    {
      "type": "range",
      "id": "posts_per_page_range",
      "label": "Posts per page",
      "min": 6,
      "max": 12,
      "step": 3,
      "default": 9
    }
  ]
}

{% endschema %}
