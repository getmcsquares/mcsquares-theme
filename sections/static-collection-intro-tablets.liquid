<script
  type="application/json"
  data-section-type="static-slideshow"
  data-section-id="{{ section.id }}"
  data-section-data
>
  {
    "enable_autoplay": {{ section.settings.enable_autoplay | json }},
    "autoplay_duration": {{ section.settings.autoplay_duration | json }}
  }
</script>

{% if section.settings.show_slideshow %}
  <section
    class="
      slideshow
      slideshow-dots-{{ section.settings.slideshow_height }}
    "
    aria-label="Slide show"
  >
    {% for block in section.blocks %}
      {% capture placeholder_slide_image %}
        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
        {% assign placeholder_style = 'lifestyle-' | append: current %}
        {%-
          include 'placeholder_svg_uri'
          placeholder: placeholder_style
        -%}
      {% endcapture %}

      <div
        class="
          slideshow-slide
        "
        tabindex="0"
        aria-label="Slide {{ forloop.index }} of {{ section.blocks.size }}"
        {{ block.shopify_attributes }}
      >
        {% if block.settings.link != blank %}
          <a
            class="
              slideshow-link
              slideshow-background-link
              slideshow-dynamic
            "
            href="{{ block.settings.link }}"
            tabindex="-1"
          ></a>
        {% endif %}

        {% assign slideshow_crop = 'center' %}

        {% if section.settings.slideshow_height == 'original' %}
          {% assign slideshow_crop = false %}
        {% endif %}
      <div class="slide-content-wrap">
        <div
          class="
            background-target
            slideshow-dynamic
            {% if section.settings.sticky %}slideshow-background-sticky{% endif %}
            slideshow-background--{{ block.id }}
          ">
          <div
            class="
              slideshow-slide-content--{{ block.id }}
              text-align-{{ block.settings.text_alignment }}
              row
              d-flex align-items-center
            "
          >
            <div class="col-12 col-sm-6 col-md-5" style="padding: 2rem">
            {% if block.settings.video_url != blank %}
              <div class="video-container">
                {% if block.settings.vid_type == 'youtube' %}
                <iframe width="560" height="315" src="{{ block.settings.video_url}}?controls=0" frameborder="0" allow="accelerometer; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              {% else %}
                <iframe src="{{ block.settings.video_url}}" frameborder="0" allow="fullscreen" allowfullscreen></iframe><script src="https://player.vimeo.com/api/player.js"></script>
              {% endif %}
              </div>
            {% else %}
            <h1 class="hero__title" style="color: {{ block.settings.color }}">
              <img src="{{ collection.image | img_url: '300x' }}">
            </h1>
            {% endif %}
            </div>
            <div class="col-sm-6 col-md-7 text-left image-content__text " style="padding:1rem">
            {% if collection.image != blank %}
              <div style="padding:1rem 0">
                  <noscript>
                    <img src="{{ collection.image | img_url: '600x' }}" alt="{{ collection.image.alt }}" class="image-content__image">
                  </noscript>
                  <div class="image-content__image-container">
                    <div class="image-content__image-wrapper" style="max-width: 100%;">
                      {% assign img_url = collection.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                      <img class="image-content__image lazyload"
                        src="{{ collection.image | img_url: '300x300' }}"
                        data-src="{{ img_url }}"
                        data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                        data-aspectratio="{{ collection.image.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ collection.image.alt | escape }}"
                        style="max-width: 100%">
                    </div>
                  </div>
              </div>
            {% endif %}
              <p class="slideshow-slide-text">{{ collection.description }}</p>
            </div>
          </div>
      </div>
      </div>
    {% endfor %}
</div>
    {%
      include 'slideshow-overlay',
      blocks: section.blocks
    %}
    {% comment %} {% include 'header-image-helper' %} {% endcomment %}
  </section>
{% endif %}
{% schema %}
{
  "name": "Tablets Intro",
  "class": "slideshow--section",
  "settings": [
    {
      "id": "show_slideshow",
      "type": "checkbox",
      "label": "Enable slideshow",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "id": "video_url",
          "type": "text",
          "label": "Video URL",
          "default": "https://www.youtube.com/embed/K538gxU8-Po",
          "info": "From the 'embed' option under the share menu"
        },
        {
          "type":      "radio",
          "id":        "vid_type",
          "label":     "Video Type",
          "options": [
            { "value": "youtube", "label": "YouTube" },
            { "value": "vimeo", "label": "Vimeo" }
          ],
          "default":   "youtube",
          "info":      "Choose a source for the video"
        },
        {
          "type": "header",
          "content": "Buttons"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "slide"
      },
      {
        "type": "slide"
      }
    ]
  }
}

{% endschema %}

