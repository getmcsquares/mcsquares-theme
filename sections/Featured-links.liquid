<div style="background-color: {{ section.settings.section_bg }}" class=" homepage-icons-section shopify-section home-section--content">

<div style="clear: both;" class="row d-flex contained">
        <div class="col-12 col-sm-10 offset-sm-1 col-md-10 offset-md-1 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
        <div class="row" >
            <div class="homepage-icon-wrap col-4 d-flex flex-column align-items-center justify-content-start text-center" style="">
              <a href="{{section.settings.link_1}}">
              <div class="circular-landscape">
                {% if section.settings.interval_img_1 %}<img class="interval-image-round" src="{{ section.settings.interval_img_1 | img_url: '240x240' }}">{% endif %}
                </div>
                {% if section.settings.text_1 %}<p style="color: {{section.settings.section_font}}">{{ section.settings.text_1 }}</p>{% endif %}
              </a>
            </div>
            <div class="homepage-icon-wrap col-4 d-flex flex-column align-items-center justify-content-start text-center" style="">
              <a href="{{section.settings.link_2}}">
              <div class="circular-landscape">
                {% if section.settings.interval_img_2 %}<img class="interval-image-round" src="{{ section.settings.interval_img_2 | img_url: '240x240' }}">{% endif %}
                </div>
                {% if section.settings.text_2 %}<p style="color: {{section.settings.section_font}}">{{ section.settings.text_2 }}</p>{% endif %}
              </a>
            </div>
            <div class="homepage-icon-wrap col-4 d-flex flex-column align-items-center justify-content-start text-center" style="">
              <a href="{{section.settings.link_3}}">
              <div class="circular-landscape">
                {% if section.settings.interval_img_3 %}<img class="interval-image-round" src="{{ section.settings.interval_img_3 | img_url: '240x240' }}">{% endif %}
                </div>
                {% if section.settings.text_3 %}<p style="color: {{section.settings.section_font}}">{{ section.settings.text_3 }}</p>{% endif %}
              </a>
            </div>
        </div>
    </div>
</div>
</div>
