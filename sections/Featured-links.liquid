        "label": "Icon 1"
        },
        {
        "type": "text",
        "id": "text_1",
        "label": "Text 1"
        },
        {
        "type": "url",
        "id": "link_1",
        "label": "Icon Link"
        },
        {
        "type": "image_picker",
        "id": "interval_img_2",
        "label": "Icon 2"
        },
        {
        "type": "text",
        "id": "text_2",
        "label": "Text 2"
        },
        {
        "type": "url",
        "id": "link_2",
        "label": "Icon Link"
        },
        {
        "type": "image_picker",
        "id": "interval_img_3",
        "label": "Icon 3"
        },
        {
        "type": "text",
        "id": "text_3",
        "label": "Text 3"
        },
        {
        "type": "url",
        "id": "link_3",
        "label": "Icon Link"
        },
        {
        "type": "color",
        "id": "section_bg",
        "label": "Section Background"
        },
        {
        "type": "color",
        "id": "section_font",
        "label": "Section Font Color"
        }
        ],
        "presets": [
        {
        "name": "Featured Links",
        "category": "Homepage"
        }
    ]
}
