{% if section.settings.show_section %}
<div style="background-color: {{ section.settings.section_bg }}" class="section-inner-small homepage-icons-section home-section--content">
{% if section.settings.title != blank %}
  <div class="section-block__header text-center">
    <h4 class="h1--mini section-block__title">{{ section.settings.title | escape }}</h4>
  </div>
{% endif %}
<div style="clear: both;" class="row d-flex contained">
        <div class="col-12 col-sm-10 offset-sm-1 col-md-10 offset-md-1 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
        <div class="row d-flex align-items-center justify-content-center m-3" >
        {% for block in section.blocks %}
        <div class="homepage-icon-wrap col d-flex flex-column align-items-center" style="">
        {% if block.settings.link %}
          <a href="{{block.settings.link}}">
        {% endif %}
            {% if block.settings.interval_img %}<img class="interval-image-small" src="{{ block.settings.interval_img | img_url: '300x300' }}">{% endif %}
            {% if block.settings.text %}<h5 style="color: {{section.settings.section_font}}">{{ block.settings.text }}</h5>{% endif %}
          {% if block.settings.link %}
          </a>
          {% endif %}
        </div>
        {% endfor %}
        </div>
    </div>
    {% if section.settings.cta_link %}
    <div class="col-12 d-flex align-items-center justify-content-center text-center" style="padding-top: 1.5em;">
        <a class="btn" href="{{ section.settings.cta_link }}">
        <span>{{ section.settings.cta_text }} </span>
        </a>
    </div>
    {% endif %}
</div>
</div>
{% endif %}
{% schema %}
{
    "name": {
        "en": "Offers Icons 1"
    },
    "settings": [
      {
          "id": "show_section",
          "type": "checkbox",
          "label": "Enable Section?",
          "default": true
        },
        {
          "type": "text",
          "id": "title",
          "label": "title",
          "default": "Featured Icons"
        },
        {
        "type": "color",
        "id": "section_bg",
        "label": "Section Background"
        },
        {
        "type": "color",
        "id": "section_font",
        "label": "Section Font Color"
        },
        {
        "type": "text",
        "id": "cta_text",
        "label": "Button Text",
        "default": "Send Invite"
        },
        {
        "type": "url",
        "id": "cta_link",
        "label": "Button Link"
        }
        ],
        "blocks": [
          {
        "type": "text",
        "name": "Icon",
        "settings": [
            {
            "type": "image_picker",
            "id": "interval_img",
            "label": "Icon"
            },
            {
              "id": "text",
              "type": "text",
              "label": "Text"
            },
            {
            "type": "url",
            "id": "link",
            "label": "Icon Link"
            }
            ]
          }
        ],
        "presets": [
        {
        "name": "Offers Icons",
        "category": "Offers"
        }
    ]
}
{% endschema %}
