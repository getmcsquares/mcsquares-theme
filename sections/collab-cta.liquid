{% assign bg_color = section.settings.bg_color %}
{% include 'svg-curve-flat' %}
<div class="page-width home-section--content" style="background-color: {{bg_color}}">
  <div class="container">
    <div class="d-flex flex-column align-items-center text-center">
    <h4 class="text-center" style="color: {{ section.settings.text-color }}">
    {{ section.settings.heading }}
    </h4>
    <p class="text-center" style="color: {{ section.settings.text-color }}">
        {{ section.settings.copy }}
    </p>
      <a href="{{section.settings.cta--link}}">
        <button class="button-secondary">
          {{ section.settings.cta-button-text }}
        </button>
      </a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Collaboration CTA",
    "class": "index-section",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Image"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Text Heading",
        "default": "Built for the Trees"
      },
      {
        "type": "richtext",
        "id": "copy",
        "label": "Copy",
        "default": "<p>Our products help companies meet environmental goals by providing a product that can be used over and over again. That means mcSquares products save the trees while saving you money.</p>"
      },
      {
        "type": "text",
        "id": "cta-button-text",
        "label": "CTA Button text",
        "default": "Contact Us"
      },
      {
        "type": "page",
        "id": "cta-link",
        "label": "CTA Link"
      }
    ],
    "presets": [
      {
        "name": {
          "en": "Contact CTA"
        },
        "category": {
          "en": "CTAs"
        }
      }
    ]
  }
{% endschema %}