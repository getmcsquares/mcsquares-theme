{% if section.settings.show_section %}
<div style="background-color: {{ section.settings.section_bg }}" class="container section-inner-small homepage-icons-section home-section--content">
{% if section.settings.title != blank %}
      <div class="section-block__header text-center">
        <h2 class="h1--mini section-block__title">{{ section.settings.title | escape }}</h2>
      </div>
    {% endif %}
  <div style="clear: both;" class="row d-flex contained">
    <div class="col-12 d-flex align-items-center justify-content-center text-center" style="padding-top: 1.5em;">
        <a class="slideshow-button button-primary" href="{{ section.settings.cta_link }}">
        {{- section.settings.button_label -}}
        </a>
    </div>
  </div>
</div>
{% endif %}
{% schema %}
{
    "name": {
        "en": "Offers CTA 1"
    },
    "settings": [
          {
          "id": "show_section",
          "type": "checkbox",
          "label": "Enable Section?",
          "default": true
        },
        {
          "type": "text",
          "id": "title",
          "label": "title",
          "default": "A Real Value"
        },
        {
        "type": "color",
        "id": "section_bg",
        "label": "Section Background"
        },
        {
        "type": "color",
        "id": "section_font",
        "label": "Section Font Color"
        },
        {
        "type": "text",
        "id": "button_label",
        "label": "Button Text",
        "default": "Send Invite"
        },
        {
        "type": "url",
        "id": "cta_link",
        "label": "Button Link"
        }
        ],
        "presets": [
        {
        "name": "Offers CTA",
        "category": "Homepage"
        }
    ]
}
{% endschema %}
