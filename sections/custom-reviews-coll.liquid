<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="dynamic-promo-mosaic"
  data-section-data
>
  {
    "compress_blocks": {{ section.settings.compress_blocks | json }}
  }
</script>
{% assign bg_color = section.settings.bg_color %}
{% include 'svg-curve-transparent' %}
<div style="background-color: {{ bg_color }}">
<section class="promo-mosaic--container">
  {% if section.settings.title != blank %}
    <h2 class="home-section--title">
      {{ section.settings.title | escape }}
    </h2>
  {% endif %}
  <div class="home-section--content promo-mosaic--height-{{ section.settings.section_height }}">
  {% for block in section.blocks %}
    <div class="custom-review row">
      <div class="col-2 d-flex align-items-start">
        <img src="{{ block.settings.avatar | img_url: '80x' }}" style="max-width: 100%; border-radius: 50%;">
      </div>
      <div class="col">
        <p><span class="tex-blue">{{block.settings.author}}</span> <span class="text-small text-grey">Verifed Buyer</span></p>
        <span class="stars"></span>
        <h5>{{block.settings.heading}}</h5>
        <p>{{block.settings.copy}}</p>
      </div>
    </div>
  {% endfor %}
  </div>
</section>
</div>
{% schema %}
{
  "name": "Reviews Products Coll",
  "class": "index--section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title (optional)"
    }
  ],
  "blocks": [
    {
      "type": "promotion",
      "name": "Promotional item",
      "settings": [
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Gina G."
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date (text)",
          "default": "10/14/19"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Review Heading",
          "default": "Amazing!"
        },
        {
          "type": "text",
          "id": "copy",
          "label": "Review Copy",
          "default": "This is incredible. I recommend it!"
        },
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Reviewer Avatar"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews Blocks Coll",
      "category": "Reviews",
      "blocks": [
        {
          "type": "promotion"
        }
      ]
    }
  ]
}

{% endschema %}